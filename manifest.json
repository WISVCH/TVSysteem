{
  "name": "TV Systeem",
  "description": "Het systeem dat op de TV's in en rond het hok draait met de komende activiteiten",
  "manifest_version": 3,
  "version": "0.1",
  "app": {
    "background": {
      "page": "background.html"
    }
  },
  "permissions": [
      "http://ch/",
      "https://ch.tudelft.nl/",
      "http://huidigeroosters.tudelft.nl/",
      "storage",
      {"socket": [
        "udp-bind:*",
        "udp-send-to:*"
      ]},
	  "background"
  ]
}
